{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "typeRoots": ["./src/types"],
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noImplicitAny": true,
        "skipLibCheck": true,
        "baseUrl": "./src",
        "outDir": "dist"
    },
    "include": ["./src/**/*"]
}
